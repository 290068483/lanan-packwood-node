{
  "name": "pack-node",
  "version": "1.0.0",
  "description": "客户数据打包处理系统",
  "main": "src/ui/electron-main.js",
  "scripts": {
    "start": "electron src/ui/electron-main.js",
    "dev": "nodemon src/ui/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "cli": "node src/ui/cli.js",
    "service": "node src/services/main-service.js",
    "archive": "node src/main-archive.js",
    "build": "electron-builder",
    "dist": "electron-builder --win --x64",
    "dist:all": "electron-builder --win --mac --linux",
    "hot": "node src/ui/start-dev-hot.js",
    "simple-hot": "node src/ui/simple-start-hot.js"
  },
  "keywords": [
    "packing",
    "customer",
    "data",
    "xml",
    "excel"
  ],
  "author": "PackNode Team",
  "license": "MIT",
  "dependencies": {
    "@xmldom/xmldom": "^0.8.10",
    "adm-zip": "^0.5.10",
    "archiver": "^5.3.1",
    "axios": "^1.6.7",
    "cheerio": "^1.0.0-rc.12",
    "electron": "^38.0.1",
    "express": "^4.18.2",
    "fast-xml-parser": "^4.3.2",
    "htmlparser2": "^9.1.0",
    "iconv-lite": "^0.6.3",
    "jsdom": "^22.1.0",
    "multer": "^1.4.5-lts.1",
    "node-xlsx": "^0.21.0",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5",
    "xml-js": "^1.6.11",
    "xml2js": "^0.6.2",
    "xpath": "^0.0.34"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.9",
    "concurrently": "^7.6.0",
    "electron-builder": "^24.13.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "build": {
    "appId": "com.packnode.app",
    "productName": "PackNode客户数据打包系统",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "config.json",
      "data/**/*",
      "docs/**/*",
      "!node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/icon.ico"
    }
  }
}